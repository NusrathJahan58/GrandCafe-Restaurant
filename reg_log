$a_n = $_REQUEST['address'];
$c_n = $_REQUEST['city'];
$u_n = $_REQUEST['uname'];
$e_n = $_REQUEST['email'];
$f_n = $_REQUEST['pass'];


$sql = "insert into restaurant.reg(name,phone,address,city,uname,email,pass)
VALUES ('$n_n', '$p_n','$a_n','$c_n','$u_n','$e_n','$f_n' )";
//echo $sql;
if (mysqli_query($conn, $sql)) {
    echo "Records added successfully";
} else {
    echo  "Error: could not able to execute $sql. " . mysqli_error($conn);
}


mysqli_close($conn);

